{
  "name": "MockingJay",
  "version": "1.0.0",
  "author": "Abhaya Rawal",
  "scripts": {
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "build-scss": "node-sass --include-path scss web/scss/core.scss web/css/app.css",
    "watch-css": "nodemon -e scss -x \"npm run build-scss\"",
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" \"npm run watch-css\""
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "*",
    "es6-shim": "*",
    "node-sass": "*",
    "reflect-metadata": "*",
    "rxjs": "*",
    "systemjs": "*",
    "zone.js": "*"
  },
  "devDependencies": {
    "concurrently": "*",
    "lite-server": "*",
    "typescript": "*",
    "typings": "*",
    "nodemon": "*"
  }
}
